{
  "compilerOptions": {
    "baseUrl": "./resources/js",
    "paths": {
      "@/*": ["*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["resources/js/**/*"],
  "exclude": ["node_modules"]
}